/* pages/collection/collection.wxss */
.Page {
  margin-bottom: 152rpx;
  position: relative;
  height: 89vh;
  width: 100vw;
  z-index: 0;
  background-color: #fff;
}

right-nav {
  position: absolute;
  left: -75vw;
  opacity: 1;
  z-index: 1;
}


.item-view {
  overflow: scroll
}

.icon-Addlocation {
  font-size: 70rpx;
  font-weight: 550;
  color: #0399F9;
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
}



.addInput {
  margin: 0;
  background-color: #F6F6F6;
  position: absolute;
  top: 0;
  border-radius: 10rpx;
  padding: 20rpx;
  width: 80vw;
  margin-left: 7.5vw;
  box-shadow: 0 2px 27px 6px rgba(0, 0, 0, .1);
  opacity: 0;
}

.addTitle {
  margin-bottom: 30rpx;
  color: #666666;
  font-weight: 600;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.titleText {
  font-size: 26rpx;
  padding-left: 20rpx;
}

.addForm {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.todoInput {
  margin-bottom: 30rpx;
}

.todoInputTitle {
  color: #666666;
  font-weight: 600;
  margin-bottom: 18rpx;
}

.todoInput input {
  border: 4rpx solid rgba(94, 94, 94, .5);
  border-radius: 15rpx;
  padding: 5rpx 15rpx;
  height: 55rpx;
}


.datePicker {
  color: #666666;
  font-weight: 600;
  margin-bottom: 30rpx;
}

.datePickerTitle {
  color: #666666;
  font-weight: 600;
  margin-bottom: 18rpx;
}

.datePicker picker {
  border: 4rpx solid rgba(94, 94, 94, .5);
  border-radius: 15rpx;
  padding: 5rpx 15rpx;
  height: 55rpx;
  display: flex;
  align-items: center;
}

.btnView {
  display: flex !important;
  margin-left: 50%;
}

.subBtn {
  margin: 1rpx;
  padding: 0;
  width: 140rpx !important;
  height: 60rpx !important;
  text-align: center !important;
  line-height: 60rpx;
  font-size: 26rpx;
  background-color: #0399F9 !important;
  color: white !important;
  border: none !important;
}

.rstBtn {
  margin: 0;
  padding: 0;
  width: 140rpx !important;
  height: 60rpx !important;
  text-align: center !important;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #666666 !important;
  border: none !important;
}